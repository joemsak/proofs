<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN"    
 "http://www.w3.org/TR/html4/strict.dtd"> 

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <title><%= APP_CONFIG['settings']['name'] %>: <%= controller.action_name %></title>
  <%= stylesheet_link_tag 'reset' %>
  <%= stylesheet_link_tag 'fonts' %>
  <%= stylesheet_link_tag 'grids' %>
  <%= stylesheet_link_tag 'base' %>
  <%= stylesheet_link_tag 'main' %>
  <%= javascript_include_tag :defaults %>
</head>
<body>
	<div id="main" class="yui-d2f"><!-- start YUI layout -->

		<div id="hd"><!-- header -->
    	<div class="yui-gd"> <!-- the "special grid" --> 
    		<div class="yui-u first">
					<h1><%= image_tag('/images/logo-gray.png', :alt => 'Michael Youngblood Photography') %></h1>
				</div> 
    		<div class="yui-u">
					<%= render :partial => "shared/user_bar" %>
				</div> 
    	</div> 
			<div id="navigation_container">
				<% ubermenu :id => 'main_navigation' do |m| %>
					<% if_admin? do %>
				  	<% m.action 'Customers', members_path %>
				  	<% m.action 'Admin', admin_controls_path %>
				  	<% m.action 'Orders', orders_path %>
				  	<% m.action 'Galleries', galleries_path %>
					<% end %>
				<% end %>
			</div>
		</div>

		<div id="bd"><!-- body -->
			<%= render :partial => "layouts/#{controller.nested_layout}" %>
		</div>  

		<div id="ft"><!-- footer -->
			<p>&copy; 2009 Michael Youngblood Photography</p>
		</div>  	
  
	</div><!-- end YUI layout -->

</body>
</html>
